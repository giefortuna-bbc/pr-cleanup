{
  "name": "Github PR Cleanup Extension",
  "description": "Extension to clean up deployment messages in a Github PR",
  "version": "0.3",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    },
    "default_title": "Toggle PR Cleanup"
  },
  "permissions": ["activeTab", "storage"]
}